// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String    @default("FACULTY")
  department    String?
  accounts      Account[]
  sessions      Session[]
  links         Link[]
  llmLogs       LLMLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Link {
  id          String   @id @default(cuid())
  title       String
  url         String
  description String?
  category    String
  department  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LLMModule {
  id          String     @id @default(cuid())
  name        String
  description String?
  promptTemplate String
  model       String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  logs        LLMLog[]
}

model LLMLog {
  id         String    @id @default(cuid())
  userId     String
  moduleId   String
  tokensUsed Int
  prompt     String
  response   String?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  module     LLMModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}